{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "mocha tests",
            "type": "node",
            "protocol" : "inspector",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [ "-r", "ts-node/register", "--no-timeouts", "test/**/*.ts"],
            "cwd": "${workspaceRoot}"
            }
    ]
}